# Environment Configuration for Category.AI
# Copy this file to .env and update the values for your local development

# React App Configuration
REACT_APP_API_BASE_URL=http://localhost:3001

# Server Configuration
API_PORT=3001
PORT=3000
NODE_ENV=development

# MongoDB Configuration
MONGO_HOST=mongodb
MONGO_PORT=27017
MONGO_USERNAME=admin
MONGO_PASSWORD=password
MONGO_DATABASE=categoryai
MONGO_AUTH_SOURCE=admin

# Full MongoDB Connection URL (will be constructed from above values)
# Format: mongodb://username:password@host:port/database?authSource=authSource
MONGODB_URL=mongodb://admin:password@mongodb:27017/categoryai?authSource=admin

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# For local development without Docker, use these values instead:
# MONGO_HOST=localhost
# MONGODB_URL=mongodb://admin:password@localhost:27017/categoryai?authSource=admin

# OpenAI Configuration
# Replace with your actual OpenAI API key
# OpenAI model is an optional field, you can specify the model you want to use.
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_URL=https://api.openai.com/v1
OPENAI_MODEL=company/model:free